# window in floating mode
super + shift + {t, f}
  bspc node -t {tiled, floating}

# screenshot
super + . 
  gnome-screenshot -i

# clipmenu
super + h
  clipmenu -i -fn Terminus:size=8 -nb '#002b36' -nf '#839496' -sb '#073642' -sf '#93a1a1'

# scratchpad
super + p
  tdrop --wm bspwm -am -w 60% -y 30% -x 20% alacritty --config-file ~/git/dotfiles/config/alacritty/scratchpad.yml

# open terminal
super + Return
	spawn-alacritty-cwd

# network manager gui
super + n
  nm-connection-editor

# launch code
super + c
  code

# launch spotify
super + s
  spotify

# teams
super + t
  teams

# whatsapp
super + w
  whatsapp

# mail / outlook
super + o
  mail

# launch programm
super + space
	ulauncher

# launch explorer
super + e
  nautilus

# launch markdown editor
super + g
  /usr/local/bin/mde

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill selected window
super + q
	bspc node --close

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# move to workspace
super + {0-9}
  bspc desktop -f {0-9}

# resize windows
super + shift + {Left,Down, Up, Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# send window to desktop and follow
super + shift + {0-9}
  bspc node -d {0-9} && bspc desktop -f {0-9}

# move through worspaces
super + {Left, Right}
  bspc desktop -f {prev, next}

# lock screen
super + l
  i3lock-fancy

# swap current node with biggest
super + Tab
  bspc node -s biggest

# firefox
super + f 
  firefox

# move node to desktop
super + {y,x}
  id=$(bspc query --nodes --node); bspc node --to-desktop {prev,next}; bspc desktop --focus next; bspc node --focus ${id} 


