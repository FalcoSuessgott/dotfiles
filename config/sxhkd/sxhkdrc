# open terminal
super + Return
	alacritty

# network manager gui
super + n
  nm-connection-editor

# launch code
super + c
  code

# launch spotify
super + s
  spotify

# teams
super + t
  teams

# whatsapp
super + w
  whatsapp

# mail / outlook
super + o
  mail

# launch programm
super + space
	ulauncher

# launch lf
super + e
  alacritty -e "lf" & 

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill selected window
super + q
	bspc node --close

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# move to workspace
super + {1-9}
  bspc desktop -f {1-9}

# move through worspaces
super + {Left, Right}
  bspc desktop -f {prev, next}

# lock screen
super + l
  i3lock-fancy

# swap current node with biggest
super + Tab
  bspc node -s biggest

# firefox
super + f 
  firefox

# focus next node
super + {p,n}
  bspc node -f {prev, next}.local

# move node to desktop
super + {y,x}
  id=$(bspc query --nodes --node); bspc node --to-desktop {prev,next}; bspc desktop --focus next; bspc node --focus ${id} 


